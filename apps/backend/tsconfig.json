{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],

    // Module Resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Emit
    "noEmit": true,
    "sourceMap": true,

    // JavaScript Support
    "allowJs": true,
    "checkJs": false,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Completeness
    "skipLibCheck": true,

    // Type definitions
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "main.ts",
    "main.js",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
