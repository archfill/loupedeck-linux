{
  "pages": {
    "1": {
      "_meta": {
        "title": "Applications",
        "description": "App launchers and media controls"
      },
      "clock": {
        "type": "clock",
        "position": {
          "col": 0,
          "row": 0
        },
        "options": {
          "cellBgColor": "#1a1a3e",
          "cellBorderColor": "#4466AA",
          "timeColor": "#FFFFFF",
          "dateColor": "#88AAFF",
          "showSeconds": true
        }
      },
      "firefoxButton": {
        "type": "button",
        "position": {
          "col": 1,
          "row": 0
        },
        "appName": "firefox",
        "options": {
          "label": "Firefox",
          "iconType": "auto",
          "iconSize": 48,
          "bgColor": "#ff6600",
          "borderColor": "#ff6600",
          "textColor": "#FFFFFF",
          "hoverBgColor": "#FF7722",
          "vibrationPattern": "tap"
        },
        "command": "firefox"
      },
      "thunderbirdButton": {
        "type": "button",
        "position": {
          "col": 2,
          "row": 0
        },
        "appName": "thunderbird",
        "options": {
          "label": "Mail",
          "iconType": "auto",
          "iconSize": 48,
          "bgColor": "#0A84FF",
          "borderColor": "#3399FF",
          "textColor": "#FFFFFF",
          "hoverBgColor": "#2B95FF",
          "vibrationPattern": "tap"
        },
        "command": "thunderbird"
      },
      "mediaPreviousButton": {
        "type": "button",
        "position": {
          "col": 1,
          "row": 2
        },
        "appName": "media-skip-backward",
        "options": {
          "label": "Previous",
          "icon": "󰒮",
          "iconSize": 56,
          "bgColor": "#6A1B9A",
          "borderColor": "#8E24AA",
          "textColor": "#FFFFFF",
          "hoverBgColor": "#7B1FA2",
          "vibrationPattern": "tap"
        },
        "command": "playerctl previous"
      },
      "mediaPlayPauseButton": {
        "type": "button",
        "position": {
          "col": 2,
          "row": 2
        },
        "appName": "media-playback-start",
        "options": {
          "label": "Play/Pause",
          "icon": "󰐊",
          "iconSize": 56,
          "bgColor": "#C62828",
          "borderColor": "#E53935",
          "textColor": "#FFFFFF",
          "hoverBgColor": "#D32F2F",
          "vibrationPattern": "tap"
        },
        "command": "playerctl play-pause"
      },
      "mediaNextButton": {
        "type": "button",
        "position": {
          "col": 3,
          "row": 2
        },
        "appName": "media-skip-forward",
        "options": {
          "label": "Next",
          "icon": "󰒭",
          "iconSize": 56,
          "bgColor": "#6A1B9A",
          "borderColor": "#8E24AA",
          "textColor": "#FFFFFF",
          "hoverBgColor": "#7B1FA2",
          "vibrationPattern": "tap"
        },
        "command": "playerctl next"
      },
      "volumeDisplay": {
        "type": "volumeDisplay",
        "position": {
          "col": 0,
          "row": 0
        },
        "options": {
          "cellBgColor": "#1a1a2e",
          "cellBorderColor": "#4a6a8a",
          "barFillColor": "#4a9eff"
        }
      },
      "mediaDisplay": {
        "type": "mediaDisplay",
        "position": {
          "col": 0,
          "row": 1
        },
        "options": {
          "cellBgColor": "#1a1a2e",
          "cellBorderColor": "#8a4a6a",
          "titleColor": "#FFFFFF",
          "artistColor": "#FF88AA",
          "statusColor": "#AAAAAA",
          "iconColor": "#FF88AA"
        }
      },
      "button0": {
        "type": "button",
        "position": {
          "col": -1,
          "row": -1
        },
        "options": {
          "label": "Page 1",
          "bgColor": "#FFFFFF",
          "borderColor": "#CCCCCC",
          "textColor": "#000000",
          "vibrationPattern": "tap",
          "ledColor": "#FFFFFF"
        },
        "command": "page:1"
      },
      "button1": {
        "type": "button",
        "position": {
          "col": -1,
          "row": -1
        },
        "options": {
          "label": "Page 2",
          "bgColor": "#FF0000",
          "borderColor": "#FF4444",
          "textColor": "#FFFFFF",
          "vibrationPattern": "tap",
          "ledColor": "#FF0000"
        },
        "command": "page:2"
      },
      "button2": {
        "type": "button",
        "position": {
          "col": -1,
          "row": -1
        },
        "options": {
          "label": "Volume Mute",
          "bgColor": "#00FF00",
          "borderColor": "#44FF44",
          "textColor": "#000000",
          "vibrationPattern": "tap",
          "ledColor": "#00FF00"
        },
        "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
      },
      "button3": {
        "type": "button",
        "position": {
          "col": -1,
          "row": -1
        },
        "options": {
          "label": "Screenshot",
          "bgColor": "#0000ff",
          "borderColor": "#0000ff",
          "textColor": "#FFFFFF",
          "vibrationPattern": "success",
          "ledColor": "#0000ff"
        },
        "command": "grim - | wl-copy"
      }
    },
    "2": {
      "_meta": {
        "title": "Page 2",
        "description": "Custom buttons"
      }
    }
  }
}
