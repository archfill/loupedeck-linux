{
  "name": "loupedeck-linux",
  "version": "1.0.0",
  "description": "Loupedeck Live S Linux controller application with web UI",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "web"
  ],
  "scripts": {
    "start": "LOG_LEVEL=info tsx main.ts",
    "start:debug": "LOG_LEVEL=debug tsx main.ts",
    "start:prod": "NODE_ENV=production tsx main.ts",
    "dev": "LOG_LEVEL=debug tsx watch main.ts",
    "dev:info": "LOG_LEVEL=info tsx watch main.ts",
    "dev:no-led": "LOG_LEVEL=debug SKIP_LED=true tsx watch main.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:web\" --names \"backend,web\" --prefix-colors \"cyan,magenta\"",
    "kill": "./scripts/kill-loupedeck.sh",
    "dev:web": "npm run dev --workspace=web",
    "build:web": "npm run build --workspace=web",
    "preview:web": "npm run preview --workspace=web",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:all": "npm run lint --workspaces --include-workspace-root --if-present",
    "lint:fix:all": "npm run lint:fix --workspaces --include-workspace-root --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tray": "tsx tray.ts",
    "tray:autostart:setup": "./scripts/setup-tray-autostart.sh setup",
    "tray:autostart:enable": "./scripts/setup-tray-autostart.sh enable",
    "tray:autostart:disable": "./scripts/setup-tray-autostart.sh disable",
    "tray:autostart:status": "./scripts/setup-tray-autostart.sh status",
    "service:install": "./scripts/manage-systemd-service.sh install",
    "service:uninstall": "./scripts/manage-systemd-service.sh uninstall",
    "service:enable": "./scripts/manage-systemd-service.sh enable",
    "service:disable": "./scripts/manage-systemd-service.sh disable",
    "service:start": "./scripts/manage-systemd-service.sh start",
    "service:stop": "./scripts/manage-systemd-service.sh stop",
    "service:restart": "./scripts/manage-systemd-service.sh restart",
    "service:status": "./scripts/manage-systemd-service.sh status",
    "service:logs": "./scripts/manage-systemd-service.sh logs",
    "install:all": "npm install && npm install --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "loupedeck": "^7.0.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "systray": "^1.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
