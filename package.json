{
  "name": "loupedeck-linux",
  "version": "0.0.1",
  "description": "Loupedeck Live S Linux controller application with web UI",
  "license": "MIT",
  "bin": {
    "loupedeck-linux": "./bin/loupedeck-linux"
  },
  "type": "module",
  "scripts": {
    "start": "pnpm --filter @loupedeck-linux/backend run start",
    "start:debug": "pnpm --filter @loupedeck-linux/backend run start:debug",
    "start:prod": "pnpm --filter @loupedeck-linux/backend run start:prod",
    "dev": "pnpm --filter @loupedeck-linux/backend run dev",
    "dev:info": "pnpm --filter @loupedeck-linux/backend run dev:info",
    "dev:no-led": "pnpm --filter @loupedeck-linux/backend run dev:no-led",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run dev:web\" --names \"backend,web\" --prefix-colors \"cyan,magenta\"",
    "dev:web": "pnpm --filter web run dev",
    "build:web": "pnpm --filter web run build",
    "preview:web": "pnpm --filter web run preview",
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm run -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "pnpm run -r typecheck",
    "service:install": "./scripts/manage-systemd-service.sh install",
    "service:uninstall": "./scripts/manage-systemd-service.sh uninstall",
    "service:enable": "./scripts/manage-systemd-service.sh enable",
    "service:disable": "./scripts/manage-systemd-service.sh disable",
    "service:start": "./scripts/manage-systemd-service.sh start",
    "service:stop": "./scripts/manage-systemd-service.sh stop",
    "service:restart": "./scripts/manage-systemd-service.sh restart",
    "service:status": "./scripts/manage-systemd-service.sh status",
    "service:logs": "./scripts/manage-systemd-service.sh logs",
    "kill": "./scripts/kill-loupedeck.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "volta": {
    "node": "22.20.0",
    "npm": "11.4.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "canvas",
      "esbuild",
      "@tailwindcss/oxide",
      "@serialport/bindings-cpp"
    ]
  }
}
